<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".main_profile">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/getuserimg"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:text="Your Profile Is Save"
        android:textColor="#45678c"
        android:textSize="30sp"
        android:textStyle="bold">

    </TextView>

    <androidx.cardview.widget.CardView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_above="@+id/getusernm"
        android:id="@+id/getuserimg"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="80dp"
        app:cardCornerRadius="130dp"
        android:layout_centerHorizontal="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_launcher_background"
            android:id="@+id/getimginimg"
            android:scaleType="centerCrop">

        </ImageView>

    </androidx.cardview.widget.CardView>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:inputType="textCapWords"
        android:hint="Enter Your Name..."
        android:id="@+id/getusernm"
        android:layout_centerInParent="true"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp">

    </EditText>


    <android.widget.Button
        android:id="@+id/saveprf"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@id/getusernm"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="#bfddf5"
        android:text="Save"
        android:textColor="#45678c">

    </android.widget.Button>

    <ProgressBar
        android:id="@+id/savebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/saveprf"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:visibility="invisible">

    </ProgressBar>

</RelativeLayout>